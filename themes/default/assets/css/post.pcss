.post {
  width: 100%;
  max-width: 1000px;
  text-align: justify;
  padding: 20px;
  margin: 20px auto;
  border-bottom: 1px solid var(--border-color);

  @media (--tablet) {
    max-width: 660px;
    // width: 660px;
  }
  
  &:nth-last-child(2),
  &:last-child {
    border-bottom: none;
  }

  &-meta {
    font-size: 1rem;
    margin-bottom: 10px;

    @media (--phone) {
      font-size: .85rem;
    }
  }

  &-title {
    font-size: 2.625rem;
    margin: 0 0 20px;

    @media (--phone) {
      font-size: 2rem;
    }

    a {
      text-decoration: none;
    }
  }

  &-tags {
    display: block;
    margin-bottom: 20px;
    font-size: 1rem;
    opacity: .5;

    a {
      text-decoration: none;
    }
  }

  &-description {
    margin-top: 30px;
    color: var(--color-secondary);
  }

  &-cover {
    /* margin: 40px -50px;
    width: 860px;
    max-width: 860px; */

    img {
      margin: 0 auto;
      border-radius: 8px;
      box-shadow: 0 12px 40px rgba(0, 0, 0, .15);
    }

    @media (--tablet) {
      margin: 20px 0;
      width: 100%;
    }
  }
}

.post--regulation {
  h1 {
    justify-content: center;
  }

  h2 {
    justify-content: center;
    margin-bottom: 10px;

    &+ h2 {
      margin-top: -10px;
      margin-bottom: 20px;
    }
  }
}
